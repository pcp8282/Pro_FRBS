<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fashkl.project">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:name="android.hardware.nfc" android:required="false" />
    <uses-permission android:name="android.permission.NFC" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/admin"
        android:label="@string/app_name"
        android:supportsRtl="true"

        android:theme="@style/AppTheme">
        <activity android:name=".HomePage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginPage"
            android:label="로그인" />
        <activity
            android:name=".RegisterPage"
            android:label="회원가입" />
        <activity
            android:name=".SerachRoutePage"
            android:label="노선조회" />
        <activity
            android:name=".SerachRouteResultPage"
            android:label="조회결과" />
        <activity
            android:name=".ChooseSeatPage"
            android:label="좌석선택" />
        <activity
            android:name=".CheckSeatPage"
            android:label="좌석착석확인" />
        <activity
            android:name=".ChooseTrainNoPage"
            android:label="호차선택" />
        <activity
            android:name=".CheckReserveTicketPage"
            android:label="비회원 예매승차권확인" />
        <activity
            android:name=".CheckReserveUserTicketPage"
            android:label="고객 예매승차권확인" />

        <activity android:name=".MenuPage"
            android:label="메뉴선택"/>
        <activity android:name=".NFCSendModePage"
            android:label="승차권 인증"/>
        <activity android:name=".ChooseReserveTypePage"
            android:label="예약 조회 타입 선택"/>

    </application>

</manifest>